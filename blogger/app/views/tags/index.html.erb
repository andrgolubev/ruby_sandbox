<h1>Existing Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class: 'tag_title' %><br/>
      <% if logged_in? %>
        <%= link_to "Delete", tag_path(tag),
            method: :delete,
            data: {confirm: "Do you want to delete this tag?"} %>
      <% end %>
    </li>
  <% end %>
</ul>
